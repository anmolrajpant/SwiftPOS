<p id="notice"><%= notice %></p>

<h1>Sales</h1><%= link_to 'New Sale', new_sale_path, class: "btn btn-primary", :style => "float: right;" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Created Date</th>
      <th>Total</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.name %></td>
        <td><%= sale.created_at %></td>
        <td><%= sale.total %></td>
        <td><%= link_to 'Show', sale %></td>
        <% if can? :update, Sale %>
        <td><%= link_to 'Edit', edit_sale_path(sale) %>
        </td>
        <%end%>
        <% if can? :destroy, Sale %>
        <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

