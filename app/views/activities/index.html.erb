<h1>Listing Activities</h1>  
<table class="table table-striped table-bordered table-condensed sortable">  
  <thead>  
    <tr>
      <th>S.No</th>  
      <th><%= "Activities"%></th>  
    </tr>  
  </thead>  
  <tbody>  
    <% @activities.each_with_index do |activity,index| %>  
      <tr>
        <td><%= index + 1 %></td>  
        <td valign="top">   
          <%= activity.owner.try(:email) %>
          <%= render_activity activity %>  
        </td>  
      </tr>  
    <% end %>  
  </tbody>  
  <tfoot>  
    <tr>  
      <td colspan="3"></td>  
    </tr>  
  </tfoot>  
</table>